{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "extends": "airbnb",
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "react/jsx-filename-extension": [0, { "extensions": [".js", ".jsx"] }],
    "react/jsx-indent": [2, 4],   //缩进  4
    "react/jsx-indent-props": [2, 4],  //缩进  4
    "react/jsx-tag-spacing": [0],  //close tag 前可以无空格
    "react/no-children-prop": [0], //可以传children
    "react/forbid-prop-types": [0, { "forbid": ["any", "array", "object"] }],
    "indent": [2, 4, {"SwitchCase": 1}],
    "object-curly-newline": [0],
    "arrow-body-style": [0],    //不强制块
    "global-require": [0],
    "no-return-assign": [0],    //禁止在return 中赋值除非被()包起来
    "no-param-reassign": [1],   //禁止对参数在赋值
    "no-unused-vars": [0, {"vars": "all", "args": "after-used" }],
    "jsx-a11y/anchor-is-valid": [0],
    "import/prefer-default-export": [0],
    "no-underscore-dangle": [0],
    "no-unused-expressions": [0],
    "no-use-before-define": [1],
    "no-undef": [0]

  }

}
